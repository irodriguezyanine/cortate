{
  "name": "cortate-cl-backend",
  "version": "1.0.0",
  "description": "Backend API para Córtate.cl - Plataforma de reservas de cortes de pelo en Chile",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.js\"",
    "seed": "node scripts/seedDatabase.js",
    "migrate": "node scripts/migrate.js",
    "backup": "node scripts/backup.js",
    "deploy": "node scripts/deploy.js",
    "docs": "jsdoc -c jsdoc.conf.json",
    "audit": "npm audit --audit-level moderate",
    "security": "npm audit && snyk test",
    "build": "echo 'Backend build completed'",
  },
  "keywords": [
    "barberia",
    "cortes",
    "reservas",
    "chile",
    "peluqueria",
    "backend",
    "api",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": {
    "name": "Córtate.cl Development Team",
    "email": "dev@cortate.cl",
    "url": "https://cortate.cl"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cortate-cl/backend.git"
  },
  "bugs": {
    "url": "https://github.com/cortate-cl/backend/issues"
  },
  "homepage": "https://cortate.cl",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "axios": "^1.5.0",
    "nodemailer": "^6.9.5",
    "handlebars": "^4.7.8",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "lodash": "^4.17.21",
    "validator": "^13.11.0",
    "xss": "^1.0.14",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "express-winston": "^4.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.15.1",
    "redis": "^4.6.8",
    "bull": "^4.11.3",
    "cron": "^2.4.4",
    "node-cron": "^3.0.2",
    "express-slow-down": "^1.6.0",
    "hpp": "^0.2.3",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "jsdoc": "^4.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.1",
    "snyk": "^1.1228.0",
    "@types/node": "^20.5.9",
    "faker": "^6.6.6"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!docs/**",
      "!scripts/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "coverage/",
      "docs/",
      "uploads/",
      "logs/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
